#:import menu menu

MainWidget:


# Call MainWidget class and assigning 2 values into 2 variables
<MainWidget>:
    canvas.before:
        Rectangle:
            size:self.size
            source: root.image_path
    menu_widget: menu_widget
	perspective_point_x: self.width/2
	perspective_point_y: self.height*0.75
	# Adding menu
	MenuWidget:
	    id:menu_widget
	# Adding score
	Label:
	    text: root.score
	    font_size: dp(20)
	    font_name: 'fonts/Eurostile.ttf'
	    size_hint: .20 , .20
	    pos_hint: {'x':0, 'top':1}